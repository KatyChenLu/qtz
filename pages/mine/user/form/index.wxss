.form .form-box {
  display: flex;
  justify-content: space-between;
  border-bottom: 1rpx solid rgba(231, 231, 231, 0.5);
  padding: 40rpx 0;
  box-sizing: border-box;
  font-size: 28rpx !important;
}

.form .form-box .label {
  display: flex;
  justify-content: center;
  flex-direction: column;
  font-size: 28rpx !important;
  width: 300rpx;
}

.form .form-box .label .important {
  color: red;
}

.form .form-box input {
  text-align: right;
  font-size: 28rpx !important;
}
