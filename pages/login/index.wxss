.content .logo {
  width: 100%;
  display: flex;
  justify-content: center;
  margin-top: 150rpx;
}

.content .logo image {
  width: 85%;
}

.content .login-form {
  margin: 40rpx 0 0 0;
  padding: 0 31rpx;
}

.content .login-form .login-item {
  padding: 24rpx 50rpx;
  display: flex;
  border-bottom: 1rpx solid #e0e0e0;
  position: relative;
  margin: 0 0 30rpx 0;
}

.content .login-form .login-item .login-img {
  display: flex;
  justify-content: center;
  flex-direction: column;
}

.content .login-form .login-item .login-img image {
  width: 40rpx;
  height: 40rpx;
}

.content .login-form .login-item .ipt {
  margin: 0 0 0 20rpx;
  font-size: 32rpx;
}

.content .login-form .login-item .get-code {
  font-size: 32rpx;
  color: #1E948A;
  position: absolute;
  right: 50rpx;
  top: 50%;
  transform: translateY(-50%);
}

.content .login-btn {
  width: 688rpx;
  height: 150rpx;
  position: fixed;
  bottom: 31rpx;
}

.content .login-btn .btn-in {
  position: absolute;
  height: 98rpx;
  width: 680rpx;
  margin: 0 auto;
  text-align: center;
  font-size: 36rpx;
  color: white;
  background-color: #1E948A;
  bottom: 0;
  display: flex;
  justify-content: center;
  flex-direction: column;
  border-radius: 10rpx;
}

.content .login-btn image {
  position: relative;
  z-index: 2;
  width: 100%;
  height: 100%;
}
