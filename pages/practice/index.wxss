@charset "UTF-8";
.content {
  padding: 20rpx 31rpx;
  box-sizing: border-box;
}

.content .search {
  display: flex;
  font-size: 28rpx !important;
  margin: 30rpx 0 30rpx 0;
}

.content .search .search-input {
  width: 85%;
  padding: 10rpx 15rpx;
  box-sizing: border-box;
  border-radius: 15rpx;
  display: flex;
  border: 1rpx solid #e0e0e0;
}

.content .search .search-input .search-icon {
  display: flex;
  justify-content: center;
  flex-direction: column;
  margin: 0 10rpx 0 0;
}

.content .search .search-input .search-icon image {
  width: 35rpx;
  height: 35rpx;
}

.content .search .search-btn {
  width: 15%;
  display: flex;
  justify-content: center;
  flex-direction: column;
  text-align: center;
  border-radius: 15rpx;
  color: white;
  font-weight: bold;
  background-color: #1E948A;
  margin-left: 20rpx;
}

.content .content-box {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.content .content-item {
  width: 329rpx;
  margin-bottom: 30rpx;
}

.content .content-item .img {
  width: 100%;
  height: 270rpx;
}

.content .content-item .img image {
  width: 100%;
  height: 100%;
  border-radius: 15rpx;
}

.content .content-item .title {
  font-size: 32rpx;
  font-weight: bolder;
  width: 100%;
  margin: 20rpx 0 10rpx 0;
}

.content .content-item .title text {
  word-break: break-all;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  /* 这里是超出几行省略 */
  overflow: hidden;
}

.content .content-item .date {
  font-size: 26rpx;
  color: #999999;
}



.content .select {
  display: flex;
  justify-content: space-between;
  width: 100%;
  margin: 30rpx 0  30rpx 0;
}

.content .select picker {
  width: 30.3333%;
}

.content .select .picker-box {
  border: 1rpx solid #e0e0e0;
  padding: 7rpx 20rpx;
  border-radius: 50rpx;
  display: flex;
  justify-content: space-between;
}

.content .select .picker-box .picker-text {
  font-size: 28rpx;
  display: flex;
  justify-content: center;
  flex-direction: column;
  width: calc(100% - 30rpx);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.content .select .picker-box .picker-img image {
  width: 30rpx;
  height: 30rpx;
}