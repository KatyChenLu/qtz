.content {
  height: 100vh;
  background-color: #F1F4F9;
  box-sizing: border-box;
}

.content .wan {
  position: absolute;
  width: 100%;
  height: 200rpx;
  margin: 0 auto;
  background-color: #1E948A;
  top: 0%;
  left: 0%;
  border-bottom-left-radius: 10%;
  border-bottom-right-radius: 10%;
}

.content .swiper {
  position: relative;
  z-index: 2;
  width: 688rpx;
  height: 370rpx;
  margin: auto;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  overflow: hidden;
  background-color: white;
}

.content .swiper .swiper-box {
  height: 100%;
}

.content .swiper .swiper-box image {
  width: 100%;
  height: 100%;
}

.content .info {
  width: 688rpx;
  height: 250rpx;
  background-color: white;
  margin: auto;
  padding: 31rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  overflow: hidden;
}

.content .info .left {
  width: 70%;
  display: flex;
  justify-content: space-between;
  flex-direction: column;
}

.content .info .left .title {
  color: #4d4d4d;
  font-weight: bold;
  font-size: 36rpx;
  width: 100%;
  overflow: hidden;
  word-break: break-all;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  -webkit-box-pack: center;
}

.content .info .left .rest {
  font-size: 26rpx;
  color: #999999;
}

.content .info .right {
  color: #00BAD3;
  font-size: 32rpx;
  display: flex;
  justify-content: space-between;
  flex-direction: column;
  text-align: center;
}

.content .detail {
  background-color: white;
  margin-top: 40rpx;
  padding: 32rpx;
  box-sizing: border-box;
}

.content .detail .detail-title {
  font-size: 36rpx;
  font-weight: bold;
}

.content .detail .detail-title text {
  position: relative;
  padding: 0 20rpx;
}

.content .detail .detail-title text::after {
  position: absolute;
  content: "";
  width: 10rpx;
  height: 100%;
  background-color: #3DE0D4;
  border-radius: 30rpx;
  left: 0;
  top: 0;
}

.content .detail .swap-btn {
  width: 100%;
  background-color: #3DE0D4;
  color: white;
  text-align: center;
  font-size: 34rpx;
  padding: 25rpx 0;
  box-sizing: border-box;
  margin-top: 20rpx;
  border-radius: 10rpx;
}

.content .popup-box {
  padding: 32rpx;
  box-sizing: border-box;
  font-size: 32rpx;
  position: relative;
}

.content .popup-box .title {
  padding: 52rpx 0 0 0;
}

.content .popup-box .address-box {
  padding: 0 0 80rpx 0;
}

.content .popup-box .address-item {
  margin-top: 30rpx;
  display: flex;
  justify-content: space-between;
  border-radius: 15rpx;
  padding: 24rpx;
  box-sizing: border-box;
  box-shadow: 0 5rpx 10rpx rgba(153, 153, 153, 0.6);
}

.content .popup-box .address-item .left {
  display: flex;
}

.content .popup-box .address-item .default {
  display: flex;
  justify-content: center;
  flex-direction: column;
}

.content .popup-box .address-item .user-info .name-phone {
  font-weight: bolder;
}

.content .popup-box .address-item .user-info .name-phone .username {
  font-size: 32rpx;
}

.content .popup-box .address-item .user-info .name-phone .phone {
  font-size: 26rpx;
  margin-left: 30rpx;
}

.content .popup-box .address-item .user-info .name-phone .is-default {
  font-size: 26rpx;
  color: white;
  background-color: #FF9C00;
  padding: 3rpx 8rpx;
  margin-left: 30rpx;
}

.content .popup-box .address-item .user-info .address-detail {
  margin-top: 7rpx;
  font-size: 28rpx;
}

.content .popup-box .address-item .look {
  display: flex;
  justify-content: center;
  flex-direction: column;
}

.content .popup-box .address-item .look image {
  width: 30rpx;
  height: 30rpx;
}

.content .popup-box .book {
  position: fixed;
  width: 80%;
  height: 80rpx;
  background-color: #3DE0D4;
  color: white;
  bottom: 32rpx;
  font-size: 34rpx;
  text-align: center;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  justify-content: center;
  flex-direction: column;
  border-radius: 30rpx;
}
