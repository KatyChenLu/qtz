.content .address {
  padding: 0 31rpx;
  box-sizing: border-box;
}

.content .address .address-item {
  margin-top: 30rpx;
  display: flex;
  justify-content: space-between;
  border-radius: 15rpx;
  padding: 24rpx;
  box-sizing: border-box;
  box-shadow: 0 5rpx 10rpx rgba(153, 153, 153, 0.6);
}

.content .address .address-item .left {
  display: flex;
}

.content .address .address-item .default {
  display: flex;
  justify-content: center;
  flex-direction: column;
}

.content .address .address-item .user-info .name-phone {
  font-weight: bolder;
}

.content .address .address-item .user-info .name-phone .username {
  font-size: 32rpx;
}

.content .address .address-item .user-info .name-phone .phone {
  font-size: 26rpx;
  margin-left: 30rpx;
}

.content .address .address-item .user-info .name-phone .is-default {
  font-size: 26rpx;
  color: white;
  background-color: #FF9C00;
  padding: 3rpx 8rpx;
  margin-left: 30rpx;
}

.content .address .address-item .user-info .address-detail {
  margin-top: 7rpx;
  font-size: 28rpx;
}

.content .address .address-item .look {
  display: flex;
  justify-content: center;
  flex-direction: column;
}

.content .address .address-item .look image {
  width: 30rpx;
  height: 30rpx;
}

.content .login-btn {
  width: 688rpx;
  height: 150rpx;
  position: fixed;
  bottom: 31rpx;
  left: 50%;
  transform: translateX(-50%);
}

.content .login-btn .btn-in {
  position: absolute;
  height: 98rpx;
  width: 680rpx;
  margin: 0 auto;
  text-align: center;
  font-size: 32rpx;
  color: white;
  background-color: #1E948A;
  bottom: 0;
  display: flex;
  justify-content: center;
  flex-direction: column;
  border-radius: 10rpx;
}

.content .login-btn image {
  position: relative;
  z-index: 2;
  width: 100%;
  height: 100%;
}
