.content {
  padding: 0 31rpx;
  box-sizing: border-box;
}

.content .search {
  display: flex;
  font-size: 28rpx !important;
  margin: 30rpx 0 0 0;
}

.content .search .search-input {
  width: 85%;
  padding: 10rpx 15rpx;
  box-sizing: border-box;
  border-radius: 15rpx;
  display: flex;
  border: 1rpx solid #e0e0e0;
}

.content .search .search-input .search-icon {
  display: flex;
  justify-content: center;
  flex-direction: column;
  margin: 0 10rpx 0 0;
}

.content .search .search-input .search-icon image {
  width: 35rpx;
  height: 35rpx;
}

.content .search .search-btn {
  width: 15%;
  display: flex;
  justify-content: center;
  flex-direction: column;
  text-align: center;
  border-radius: 15rpx;
  color: white;
  font-weight: bold;
  background-color: #e6212b;
  margin-left: 20rpx;
}

.content .select {
  display: flex;
  justify-content: space-between;
  width: 100%;
  margin: 30rpx 0 0 0;
}

.content .select picker {
  width: 30.3333%;
}

.content .select .picker-box {
  border: 1rpx solid #e0e0e0;
  padding: 7rpx 20rpx;
  border-radius: 50rpx;
  display: flex;
  justify-content: space-between;
}

.content .select .picker-box .picker-text {
  font-size: 28rpx;
  display: flex;
  justify-content: center;
  flex-direction: column;
  width: calc(100% - 30rpx);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.content .select .picker-box .picker-img image {
  width: 30rpx;
  height: 30rpx;
}

.content .list {
  margin: 40rpx 0 0 0;
}
