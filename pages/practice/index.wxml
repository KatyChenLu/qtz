<view class="content">
  <view class="search">
    <view class="search-input">
      <view class="search-icon">
        <image src="/static/search.png" />
      </view>
      <view class="search-in">
        <input type="text" value="{{config.activity_name}}" bindinput="inputName" placeholder="请输入活动内容" />
      </view>
    </view>
    <view class="search-btn" bindtap="resetForm">
        <text>重置</text>
    </view>
  </view>

  <view class="select">
    <picker mode="{{ item.mode }}" range="{{item.range}}" range-key="{{item.rangeKey}}" wx:for="{{selectList}}" wx:key="id" bindchange="confirm" data-id="{{item.id}}">
      <view class="picker-box" >
        <view class="picker-text">
          <text>{{ item.name }}</text>
        </view>
        <view class="picker-img">
          <image src="/static/xiala.png" />
        </view>
      </view>
    </picker>
  </view>

  <my-nodata title="暂无数据" style="margin: auto;" wx:if="{{list.length === 0}}"></my-nodata>
  <view class="content-box" wx:else>
    <view class="content-item" wx:for="{{list}}" wx:key="index" data-id="{{item.practice_id}}" bindtap="go">
      <view class="img">
        <image src="{{item.image}}" mode="aspectFill" />
      </view>
      <view class="title">
        <text>{{item.practice_title}}</text>
      </view>
      <view class="date">
        <text>{{item.create_time}}</text>
      </view>
    </view>
  </view>

</view>