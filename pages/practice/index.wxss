@charset "UTF-8";
.content {
  padding: 20rpx 31rpx;
  box-sizing: border-box;
}

.content .content-box {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.content .content-item {
  width: 329rpx;
  margin-bottom: 30rpx;
}

.content .content-item .img {
  width: 100%;
  height: 270rpx;
}

.content .content-item .img image {
  width: 100%;
  height: 100%;
  border-radius: 15rpx;
}

.content .content-item .title {
  font-size: 32rpx;
  font-weight: bolder;
  width: 100%;
  margin: 20rpx 0 10rpx 0;
}

.content .content-item .title text {
  word-break: break-all;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  /* 这里是超出几行省略 */
  overflow: hidden;
}

.content .content-item .date {
  font-size: 26rpx;
  color: #999999;
}
