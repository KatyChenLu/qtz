.content .logo {
  position: relative;
}

.content .logo .title {
  position: absolute;
  width: 280rpx;
  text-align: center;
  font-size: 36rpx;
  font-weight: bolder;
  color: #1E948A;
  left: 50%;
  transform: translateX(-50%);
  margin: 10rpx 0 0 0;
}

.content .form {
  padding: 0 31rpx;
  box-sizing: border-box;
  font-size: 32rpx;
}

.content .form .form-item {
  display: flex;
  margin: 0 0 30rpx 0;
}

.content .form .form-item .label {
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 200rpx;
  white-space: nowrap;
}

.content .form .form-item .special-label {
  width: 700rpx;
}

.content .form .form-item .ipt {
  padding: 10rpx 20rpx;
  box-sizing: border-box;
  width: calc(100% - 200rpx);
  border: 1rpx solid #999999;
  border-radius: 10rpx;
}

.content .form .form-item .special-ipt {
  width: 100%;
}

.content .form .form-item .picker {
  width: 100%;
  border-radius: 10rpx;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
  border: 1rpx solid #999999;
}

.content .form .form-item .huji {
  width: 220rpx !important;
}

.content .form .form-item .family {
  justify-content: flex-start !important;
}

.content .tips {
  color: red;
  margin: 0 0 20rpx 0;
}

.content .scroll {
  height: 230rpx;
  font-size: 32rpx;
}

.content .scroll .checkbox .van-checkbox {
  margin: 0 0 20rpx 0;
}
