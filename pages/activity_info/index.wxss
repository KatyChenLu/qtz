.activity-info {
  box-sizing: border-box;
}

.activity-info .swiper-box {
  padding: 0 31rpx;
  box-sizing: border-box;
}

.activity-info swiper {
  width: 100%;
  height: 450rpx;
  border-radius: 30rpx;
  overflow: hidden;
}

.activity-info swiper swiper-item .item {
  width: 100%;
  height: 100%;
}

.activity-info swiper swiper-item .item image {
  width: 100%;
  height: 100%;
}

.activity-info .activity-box {
  margin: 30rpx 31rpx 0 31rpx;
  padding: 24rpx;
  box-shadow: 0 0 10rpx #b1abab;
  border-radius: 20rpx;
}

.activity-info .activity-box .top {
  display: flex;
}

.activity-info .activity-box .top .left {
  font-weight: bold;
  width: 70%;
  word-break: break-all;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}

.activity-info .activity-box .top .right {
  width: 30%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.activity-info .activity-box .top .right .score {
  color: red;
  font-weight: bold;
}

.activity-info .activity-box .top .right .score-title {
  font-size: 32rpx;
}

.activity-info .activity-box .top .right text {
  text-align: center;
}

.activity-info .activity-box .bottom {
  padding: 10rpx 0 0 0;
  box-sizing: border-box;
  border-top: 1rpx solid #e0e0e0;
  margin: 25rpx 0 0 0;
  display: flex;
}

.activity-info .activity-box .bottom .left {
  width: 70%;
}

.activity-info .activity-box .bottom .left .info-item {
  display: flex;
  margin: 15rpx 0;
}

.activity-info .activity-box .bottom .left .info-item image {
  width: 40rpx;
  height: 40rpx;
}

.activity-info .activity-box .bottom .left .info-item .progress {
  margin: 0 5rpx 0 5rpx;
  width: 70%;
  padding: 5rpx 0;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  flex-direction: column;
}

.activity-info .activity-box .bottom .left .info-item .progress .progress-in {
  width: 100%;
  height: 60%;
  background-color: #e0e0e0;
  border-radius: 50rpx;
  overflow: hidden;
}

.activity-info .activity-box .bottom .left .info-item .progress .progress-in .progressing {
  width: 0;
  transition: width 1s ease;
  height: 100%;
  border-radius: 50rpx;
  background-color: #ffa600;
}

.activity-info .activity-box .bottom .left .info-item .count {
  font-size: 30rpx;
  color: #797979;
}

.activity-info .activity-box .bottom .right {
  width: 30%;
  display: flex;
  justify-content: center;
  flex-direction: column;
}

.activity-info .activity-box .bottom .right .img {
  width: 100%;
  display: flex;
  justify-content: center;
}

.activity-info .activity-box .bottom .right .img image {
  margin: 0 auto;
  width: 60rpx;
  height: 60rpx;
}

.activity-info .activity-box .bottom .right .nav-title {
  font-size: 34rpx;
  text-align: center;
}

.activity-info .home-list-title {
  margin: 20rpx 0 0 0;
  font-size: 26rpx;
}

.activity-info .home-list-title .title-box {
  width: 200rpx;
  height: 80rpx;
  position: relative;
}

.activity-info .home-list-title .title-box .img {
  height: 100%;
  width: 100%;
}

.activity-info .home-list-title .title-box text {
  position: absolute;
  bottom: 10%;
  left: 24rpx;
}

.activity-info .detail-content {
  margin: 20rpx 0 0 0;
  padding: 0 31rpx;
  box-sizing: border-box;
}

.activity-info .btn {
  position: fixed;
  z-index: 3;
  bottom: 0;
  width: 100%;
  text-align: center;
  font-size: 32rpx;
  padding: 40rpx 0;
}

.activity-info .form {
  width: 650rpx;
  height: 650rpx;
  background-color: white;
  padding: 24rpx;
  box-sizing: border-box;
  position: relative;
}

.activity-info .form .cancel {
  width: 100%;
  display: flex;
  justify-content: flex-end;
}

.activity-info .form .cancel image {
  width: 50rpx;
  height: 50rpx;
}

.activity-info .form .form-title {
  color: #1E948A;
  font-size: 32rpx;
  width: 40%;
  text-align: center;
  margin: auto;
  font-weight: bold;
}

.activity-info .form .form-detail {
  padding: 0 24rpx;
  box-sizing: border-box;
}

.activity-info .form .form-detail .form-item {
  display: flex;
  margin-top: 20rpx;
}

.activity-info .form .form-detail .form-item .label {
  width: 35%;
  font-size: 32rpx;
  display: flex;
  justify-content: center;
  flex-direction: column;
}

.activity-info .form .form-detail .form-item .ipt {
  width: 65%;
  font-size: 32rpx;
  border-radius: 15rpx;
  padding: 5rpx 20rpx;
  box-sizing: border-box;
  border: 1rpx solid #e0e0e0;
}

.activity-info .form .login-btn {
  width: 530rpx;
  height: 120rpx;
  position: absolute;
  margin: 0 auto;
  bottom: 32rpx;
  left: 50%;
  transform: translateX(-50%);
}

.activity-info .form .login-btn .btn-in {
  position: absolute;
  height: 78rpx;
  width: 530rpx;
  margin: 0 auto;
  text-align: center;
  font-size: 32rpx;
  color: white;
  background-color: #1E948A;
  bottom: 0;
  display: flex;
  justify-content: center;
  flex-direction: column;
  border-radius: 10rpx;
}

.activity-info .form .login-btn image {
  position: relative;
  z-index: 2;
  width: 100%;
  height: 100%;
}
