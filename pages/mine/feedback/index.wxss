.content .home-list-title {
  margin: 20rpx 0 0 0;
  font-size: 30rpx;
  padding-left: 10rpx;
}

.content .home-list-title .title-box {
  width: 200rpx;
  height: 80rpx;
  position: relative;
}

.content .home-list-title .title-box .img {
  height: 100%;
  width: 100%;
}

.content .home-list-title .title-box text {
  position: absolute;
  bottom: 10%;
  left: 24rpx;
}

.content .editor {
  padding: 0 32rpx;
  box-sizing: border-box;
  margin-top: 50rpx;
}

.content .editor .textarea {
  width: 100%;
  margin-top: 20rpx;
  font-size: 32rpx;
  padding: 24rpx;
  box-sizing: border-box;
  border-radius: 15rpx;
  background-color: #F4F4F4;
}
