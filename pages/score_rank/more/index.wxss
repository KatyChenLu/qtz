.content {
  padding: 0 31rpx;
  box-sizing: border-box;
}

.content .user-box {
  display: flex;
  justify-content: space-between;
  border-bottom: 1rpx solid rgba(231, 231, 231, 0.6);
  padding: 30rpx 0;
  box-sizing: border-box;
}

.content .rank-left {
  display: flex;
  width: 70%;
}

.content .rank-left .rank-num {
  font-weight: bolder;
  width: 18%;
  color: red;
  text-align: center;
  display: flex;
  justify-content: center;
  flex-direction: column;
}

.content .rank-left .rank-user {
  display: flex;
}

.content .rank-left .rank-user .rank-name {
  font-size: 34rpx;
  display: flex;
  justify-content: center;
  flex-direction: column;
}

.content .rank-left .rank-user .rank-img {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin: 0 30rpx 0 20rpx;
  overflow: hidden;
  display: flex;
  justify-content: center;
  flex-direction: column;
}

.content .rank-left .rank-user .rank-img image {
  width: 100%;
}

.content .rank-score {
  width: 30%;
  font-size: 32rpx;
  display: flex;
  justify-content: center;
  flex-direction: column;
  text-align: right;
  color: red;
}
