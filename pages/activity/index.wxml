<!--pages/activity/index.wxml-->
<view class="content">
  <view class="search">
    <view class="search-input">
      <view class="search-icon">
        <image src="/static/search.png" />
      </view>
      <view class="search-in">
        <input type="text" placeholder="请输入活动内容" />
      </view>
    </view>
    <view class="search-btn">
        <text>重置</text>
    </view>
  </view>
  <view class="select">
    <picker mode="{{ item.mode }}" range="{{item.range}}" range-key="{{item.rangeKey}}" wx:for="{{selectList}}" wx:key="id" bindchange="confirm" data-id="{{item.id}}">
      <view class="picker-box" >
        <view class="picker-text">
          <text>{{ item.name }}</text>
        </view>
        <view class="picker-img">
          <image src="/static/xiala.png" />
        </view>
      </view>
    </picker>
  </view>
  <view class="list">
    <my-nodata title="暂无活动" wx:if="{{activityConfig.list.length === 0}}"></my-nodata>
    <view class="list-box">
      <my-item wx:for="{{ activityConfig.list }}" detail="{{ item }}" wx:key="index" ></my-item>
    </view>
  </view>
</view>