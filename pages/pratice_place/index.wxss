.content .map image {
  width: 100%;
}

.content .area {
  box-sizing: border-box;
  font-size: 30rpx;
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
}

.content .area .area-item {
  width: 23%;
  text-align: center;
  border: 1rpx solid #e0e0e0;
  border-radius: 30rpx;
  padding: 10rpx 0;
  margin: 20rpx 4rpx 0 4rpx;
}

.content .area-detail {
  width: 600rpx;
  height: 800rpx;
  background-color: white;
  padding: 24rpx;
  box-sizing: border-box;
}

.content .area-detail .cancel {
  width: 100%;
  display: flex;
  justify-content: flex-end;
}

.content .area-detail .cancel image {
  width: 50rpx;
  height: 50rpx;
}

.content .area-detail .area-title {
  text-align: center;
  font-weight: bold;
  font-size: 34rpx;
}

.content .area-detail .in {
  display: flex;
  font-size: 26rpx;
  margin: 20rpx 0;
  font-weight: bold;
  position: relative;
}

.content .area-detail .in .in-title {
  display: flex;
  justify-content: center;
  flex-direction: column;
}

.content .area-detail .in .nav {
  right: 0;
  position: absolute;
}

.content .area-detail .in image {
  width: 40rpx;
  height: 40rpx;
}
