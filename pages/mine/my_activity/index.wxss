.content {
  padding: 0 32rpx;
  box-sizing: border-box;
  height: 100vh;
  background-color: #F1F4F9;
}

.content .my-item {
  box-shadow: 0 0 10rpx #b1abab;
  padding: 24rpx;
  box-sizing: border-box;
  border-radius: 20rpx;
  margin-bottom: 40rpx;
  position: relative;
}

.content .my-item image {
  width: 100%;
}

.content .my-item .back {
  width: 100% !important;
  height: 70rpx;
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: 2;
}

.content .my-item .item-box {
  display: flex;
  position: relative;
  z-index: 1;
}

.content .my-item .item-box .item-left {
  width: 70%;
}

.content .my-item .item-box .item-left .left-title {
  font-size: 28rpx;
  font-weight: bold;
  margin: 10rpx 0;
}

.content .my-item .item-box .item-left .item-info {
  color: #797979;
  display: flex;
  font-size: 28rpx;
}

.content .my-item .item-box .item-left .item-info image {
  width: 45rpx;
  height: 45rpx;
  margin: 0 10rpx 0 0;
}

.content .my-item .item-box .item-left .item-info .info-text {
  display: flex;
  justify-content: center;
  flex-direction: column;
}

.content .my-item .item-box .item-left .item-info .info-text .info-score {
  color: #FF9C00;
}

.content .my-item .item-box .item-right {
  width: 30%;
  display: flex;
  justify-content: flex-end;
  flex-direction: column;
  font-size: 32rpx;
}

.content .my-item .item-box .item-right .btn {
  color: white;
  display: flex;
  justify-content: flex-end;
  margin: 20rpx 0 0 0;
}

.content .my-item .item-box .item-right .btn text {
  padding: 10rpx 20rpx;
  box-sizing: border-box;
  border-radius: 15rpx;
}

.content .my-item .item-box .item-right .code text {
  background-color: red;
}

.content .my-item .item-box .item-right .cancel text {
  background-color: #1E948A;
}
