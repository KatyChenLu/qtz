.content {
  height: 100vh;
  background-color: #F1F4F9;
  padding: 0 24rpx;
  box-sizing: border-box;
}

.content .item {
  background-color: white;
  border-radius: 20rpx;
  margin-top: 30rpx;
  display: flex;
  padding: 24rpx;
  justify-content: space-between;
}

.content .item .left {
  width: calc(100% - 230rpx);
  display: flex;
  justify-content: space-between;
  flex-direction: column;
}

.content .item .left .title {
  font-size: 30rpx;
  font-weight: bold;
}

.content .item .left .date {
  font-size: 26rpx;
  color: #999999;
}

.content .item .right {
  display: flex;
  justify-content: center;
  flex-direction: column;
}

.content .item .right image {
  vertical-align: bottom;
  width: 200rpx;
  height: 200rpx;
}
