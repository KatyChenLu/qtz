.my-item {
  box-shadow: 0 0 10rpx #b1abab;
  padding: 24rpx;
  box-sizing: border-box;
  border-radius: 20rpx;
  margin-bottom: 40rpx;
  position: relative;
}

.my-item image {
  width: 100%;
}

.my-item .back {
  width: 100% !important;
  height: 70rpx;
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: 2;
}

.my-item .item-box {
  display: flex;
  padding: 0 0 60rpx 0;
  position: relative;
  z-index: 1;
}

.my-item .item-box .item-left {
  width: 70%;
}

.my-item .item-box .item-left .left-title {
  font-size: 28rpx;
  font-weight: bold;
  margin: 10rpx 0;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}

.my-item .item-box .item-left .item-info {
  color: #797979;
  display: flex;
  font-size: 28rpx;
}

.my-item .item-box .item-left .item-info image {
  width: 45rpx;
  height: 45rpx;
  margin: 0 10rpx 0 0;
}

.my-item .item-box .item-left .item-info .info-text {
  display: flex;
  justify-content: center;
  flex-direction: column;
}

.my-item .item-box .item-right {
  width: 30%;
  display: flex;
  justify-content: flex-end;
  flex-direction: column;
  font-size: 32rpx;
}

.my-item .item-box .item-right .item-score {
  color: red;
  font-weight: bold;
  display: flex;
  justify-content: center;
  margin-bottom: 20rpx;
}

.my-item .item-box .item-right .item-status {
  display: flex;
  justify-content: center;
  color: #797979;
  font-size: 30rpx;
}
