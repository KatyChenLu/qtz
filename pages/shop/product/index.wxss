.content {
  height: 100vh;
  background-color: #F1F4F9;
  box-sizing: border-box;
}

.content .wan {
  position: absolute;
  width: 100%;
  height: 200rpx;
  margin: 0 auto;
  background-color: #1E948A;
  top: 0%;
  left: 0%;
  border-bottom-left-radius: 10%;
  border-bottom-right-radius: 10%;
}

.content .swiper {
  position: relative;
  z-index: 2;
  width: 688rpx;
  height: 370rpx;
  margin: auto;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  overflow: hidden;
  background-color: white;
}

.content .swiper .swiper-box {
  height: 100%;
}

.content .swiper .swiper-box image {
  width: 100%;
  height: 100%;
}

.content .info {
  width: 688rpx;
  height: 250rpx;
  background-color: white;
  margin: auto;
  padding: 31rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  overflow: hidden;
}

.content .info .left {
  width: 70%;
  display: flex;
  justify-content: space-between;
  flex-direction: column;
}

.content .info .left .title {
  color: #4d4d4d;
  font-weight: bold;
  font-size: 36rpx;
  width: 100%;
  overflow: hidden;
  word-break: break-all;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  -webkit-box-pack: center;
}

.content .info .left .rest {
  font-size: 26rpx;
  color: #999999;
}

.content .info .right {
  color: #00BAD3;
  font-size: 32rpx;
  display: flex;
  justify-content: space-between;
  flex-direction: column;
  text-align: center;
}

.content .detail {
  background-color: white;
  margin-top: 40rpx;
  padding: 32rpx;
  box-sizing: border-box;
}

.content .detail .detail-title {
  font-size: 36rpx;
  font-weight: bold;
}

.content .detail .detail-title text {
  position: relative;
  padding: 0 20rpx;
}

.content .detail .detail-title text::after {
  position: absolute;
  content: "";
  width: 10rpx;
  height: 100%;
  background-color: #3DE0D4;
  border-radius: 30rpx;
  left: 0;
  top: 0;
}

.content .detail .swap-btn {
  width: 100%;
  background-color: #3DE0D4;
  color: white;
  text-align: center;
  font-size: 34rpx;
  padding: 25rpx 0;
  box-sizing: border-box;
  margin-top: 20rpx;
  border-radius: 10rpx;
}
