.content .intro {
  margin: 30rpx 0 0 0;
  padding: 0 32rpx;
  box-sizing: border-box;
}

.content .intro .title {
  font-size: 34rpx;
  font-weight: bolder;
}

.content .intro .intro-unit {
  font-size: 32rpx;
  color: #999999;
  margin: 10rpx 0;
}

.content .tab {
  font-size: 34rpx;
  margin: 30rpx 0;
  font-weight: bolder;
}

.content .tab text {
  padding: 0 0 0 24rpx;
  position: relative;
}

.content .tab text::before {
  bottom: 0;
  left: 0;
  content: "";
  display: inline-block;
  position: absolute;
  width: 8rpx;
  height: 100%;
  background-color: #1E948A;
}
